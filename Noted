Masuk ke bootable iso dan pastikan dpt insternet
# jika mau static edit File
- nano /etc/systemd/network/20-***

- curl -fsSL christitus.com/linux | sh
# pilih arch Server install 
# Tunggu hingga selesai

# jika sudah 
- arch-chroot /mnt /bin/bash

#install Grub
pacman -S grub efibootmgr dosfstools mtools os-prober
grub-install --removable --target=x86_64-efi --efi-directory=/boot --bootloader-id=GRUB
grub-mkconfig -o /boot/grub/grub.cfg
nano /etc/default/grub
hapus # pada GRUB_DISABLE_OS_PROBER
grub-mkconfig -o /boot/grub/grub.cfg 


#install KDE Plasma
sudo pacman -S plasma-desktop plasma-workspace qt5-wayland qt6-wayland konsole kwalletmanager ark nano dolphin kate networkmanager plasma-nm kde-gtk-config kwin kdecoration spectacle kscreen plasma-systemmonitor plasma-pa kde-cli-tools xorg-xwayland xdg-desktop-portal xdg-desktop-portal-kde mesa lib32-mesa vulkan-radeon lib32-vulkan-radeon vulkan-icd-loader lib32-vulkan-icd-loader libva-mesa-driver lib32-libva-mesa-driver pipewire pipewire-audio pipewire-pulse wireplumber linux-firmware

#Buat auto Login

sudo mkdir -p /etc/systemd/system/getty@tty1.service.d
sudo nano /etc/systemd/system/getty@tty1.service.d/override.conf

[Service]
ExecStart=
ExecStart=-/usr/bin/agetty --autologin (User) --noclear %I $TERM
Type=simple

sudo systemctl daemon-reexec
sudo systemctl daemon-reload
sudo systemctl restart getty@tty1

nano ~/.bash_profile

if [[ -z $DISPLAY ]] && [[ $(tty) = /dev/tty1 ]]; then
  exec startplasma-wayland
fi

sudo nano /etc/systemd/logind.conf

NAutoVTs=1
ReserveVT=0

sudo systemctl restart systemd-logind

 
EDIT .bashrc (jika ingin saja untuk Shortcut)

# === Install ===
alias yayi='yay -Slq | fzf --multi --preview "yay -Sii {1}" --preview-window=down:75% | xargs -ro yay -S'
alias paci="pacman -Slq | fzf --multi --preview 'pacman -Si {1}' --preview-window=down:75% | xargs -ro pacman -S"

# === Uninstall (hanya paket terpasang) ===
alias yayu='yay -Qq | fzf --multi --preview "yay -Qi {1}" --preview-window=down:75% | xargs -ro yay -Rns'
alias pacu="pacman -Qq | fzf --multi --preview 'pacman -Qi {1}' --preview-window=down:75% | xargs -ro pacman -Rns"

alias pupdate='sudo pacman -Syyu'
alias yupdate='sudo yay -Syyu'
